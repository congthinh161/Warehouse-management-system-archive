@page
@model WHM.FE.Pages.Product.AddProductModel
@{
    var mess = ViewData["Mess"];
}
<link rel="stylesheet" href="/css/ProductList.css" />
<div class="main-container">
    <div class="tabular--wrapper">
        @if (mess != null)
        {
            if (mess.Equals("Add Success"))
            {
                <div class="alert alert-success">@mess</div>

            }
            else
            {
                <div class="alert alert-danger">@mess</div>
            }
        }
        <h3 class="header--title">Add Product</h3>
        <div class="row">
            <form class="mt-5 col-md-4" method="post">
                <label class="form-label"> Category Id :</label>
                <input type="text" class="form-control" name="CategoryId" />
                <label class="form-label"> Category Name :</label>
                <input type="text" class="form-control" name="CategoryName" />
                <label class="form-label"> Product Name :</label>
                <input type="text" class="form-control" name="ProductName" />
                <label class="form-label"> Product Description :</label>
                <textarea class="form-control" name="ProductDescription" style="height:150px;" placeholder="Description Category Here..."></textarea>
                <label class="form-label"> Estimated Price :</label>
                <input type="text" class="form-control" name="EstimatedPrice" />
                <button class="btn btn-success mt-5">Save</button>
            </form>
        </div>
    </div>
</div>

